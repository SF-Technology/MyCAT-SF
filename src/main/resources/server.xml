<!DOCTYPE mycat:server SYSTEM "server.dtd">
<mycat:server xmlns:mycat="http://org.opencloudb/">
	<system>
		<property name="defaultSqlParser">druidparser</property>
		<property name="charset">utf8</property>
		<property name="sqlInterceptor">org.opencloudb.interceptor.impl.DefaultSqlInterceptor</property>
		
		<property name="processorBufferChunk">32768</property>
		
		<!-- 指定系统可用的线程数 -->
		<property name="processors">8</property>
		
		<property name="processorExecutor">32</property>

		<!--默认是65535 64K 用于sql解析时最大文本长度 -->
		<property name="maxStringLiteralLength">65535</property>
		
		<property name="serverPort">8066</property>
		
		<property name="managerPort">9066</property>
		
		<property name="idleTimeout">600000</property>
		
		<property name="bindIp">0.0.0.0</property>
		
	</system>
	
	<user name="dev">
		<property name="password">123456</property>
		<property name="schemas">dev</property>
	</user>
</mycat:server>